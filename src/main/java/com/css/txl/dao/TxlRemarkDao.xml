<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.txl.dao.TxlRemarkDao">

	<select id="queryObject" resultType="com.css.txl.entity.TxlRemark">
		select * from TXL_REMARK where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.txl.entity.TxlRemark">
		select * from TXL_REMARK 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from TXL_REMARK 
	</select>
	 
	<insert id="save" parameterType="com.css.txl.entity.TxlRemark">
		insert into TXL_REMARK
		(
			"ID", 
			"REMARK_CONTENT", 
			"REMARK_CREATOR_ID", 
			"REMARK_CREATOR_NAME", 
			"CREATED_TIME", 
			"REMARKED_PERSON_ID", 
			"REMARKED_PERSON_NAME", 
			"UPDATE_TIME"
		)
		values
		(
			#{id}, 
			#{remarkContent}, 
			#{remarkCreatorId}, 
			#{remarkCreatorName}, 
			#{createdTime}, 
			#{remarkedPersonId}, 
			#{remarkedPersonName}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.txl.entity.TxlRemark">
		update TXL_REMARK 
		<set>
			<if test="remarkContent != null">"REMARK_CONTENT" = #{remarkContent}, </if>
			<if test="remarkCreatorId != null">"REMARK_CREATOR_ID" = #{remarkCreatorId}, </if>
			<if test="remarkCreatorName != null">"REMARK_CREATOR_NAME" = #{remarkCreatorName}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="remarkedPersonId != null">"REMARKED_PERSON_ID" = #{remarkedPersonId}, </if>
			<if test="remarkedPersonName != null">"REMARKED_PERSON_NAME" = #{remarkedPersonName}, </if>
			<if test="updateTime != null">"UPDATE_TIME" = #{updateTime}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from TXL_REMARK where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from TXL_REMARK where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>