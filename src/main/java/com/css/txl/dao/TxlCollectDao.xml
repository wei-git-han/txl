<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.txl.dao.TxlCollectDao">

	<select id="queryObject" resultType="com.css.txl.entity.TxlCollect">
		select * from TXL_COLLECT where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.txl.entity.TxlCollect">
		select * from TXL_COLLECT 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from TXL_COLLECT 
	</select>
	 
	<insert id="save" parameterType="com.css.txl.entity.TxlCollect">
		insert into TXL_COLLECT
		(
			"ID", 
			"USERID", 
			"COLLECT_USERID"
		)
		values
		(
			#{id}, 
			#{userid}, 
			#{collectUserid}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.txl.entity.TxlCollect">
		update TXL_COLLECT 
		<set>
			<if test="userid != null">"USERID" = #{userid}, </if>
			<if test="collectUserid != null">"COLLECT_USERID" = #{collectUserid}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from TXL_COLLECT where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from TXL_COLLECT where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>